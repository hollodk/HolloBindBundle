{% extends "::base.html.twig" %}

{% block body %}
<h1>Zones</h1>

<table>
  <thead>
    <tr>
      <th>Domain</th>
      <th>Address</th>
      <th>Updated at</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {% for domain in domains %}
    <tr>
      <td>{{ domain.domain }}</td>
      <td>{{ domain.address }}</td>
      <td>{{ domain.updatedAt|date('Y-m-d H:i:s') }}</td>
      <td>
        <a href="{{ path('hollo_bind_zone_index', {'id':domain.id}) }}">Records</a>
        <a href="{{ path('hollo_bind_adminzone_update', {'id':domain.id}) }}">Edit</a>
        <a href="{{ path('hollo_bind_adminzone_delete', {'id':domain.id}) }}">Delete</a>
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="4">There is no domains at the time.</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
