{% extends "HolloBindBundle::layout.html.twig" %}

{% block body %}

{% include "HolloBindBundle:AdminPTR:top.html.twig" %}

<h2>Domains</h2>

<table>
  <thead>
    <tr>
      <th>Domain</th>
      <th>Updated at</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {% for domain in domains %}
    <tr>
      <td>{{ domain.domain }}</td>
      <td>{{ domain.updatedAt|date('Y-m-d H:i:s') }}</td>
      <td>
        <a href="{{ path('hollo_bind_domain_index', {'id':domain.id}) }}">Records</a>
        <a href="{{ path('hollo_bind_adminptr_update', {'id':domain.id}) }}">Edit</a>
        <a href="{{ path('hollo_bind_adminptr_delete', {'id':domain.id}) }}" onclick="return confirm('Are you sure?');">Delete</a>
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="4">There is no pointers at the time.</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
