{% extends "HolloBindBundle::layout.html.twig" %}

{% block body %}

{% include "HolloBindBundle:Domain:top.html.twig" %}

<h2>{{ domain.domain }}</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Address</th>
      <th>Updated at</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {% for record in domain.records %}
    <tr>
      <td>{{ record.name }}</td>
      <td>{{ record.type }}</td>
      <td>{{ record.address }}</td>
      <td>{{ domain.updatedAt|date('Y-m-d H:i:s') }}</td>
      <td>
        <a href="{{ path('hollo_bind_record_update', {'id':record.id}) }}">Edit</a>
        <a href="{{ path('hollo_bind_record_delete', {'id':record.id}) }}" onclick="return confirm('Are you sure?');">Delete</a>
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="5">There is no records at the time.</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
